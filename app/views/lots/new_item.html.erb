<h2>Selecione um Item para Adicionar ao Lote</h2>

<% if @items.empty? %>
  <p>Não há itens disponíveis</p>
<% else %>

  <%= form_with(url: add_item_lot_path(@lot.id)) do |f| %>
    <div>
      <%= f.label :item_id, 'Item' %>
      <%= f.collection_select :item_id, @items, :id, :name %>
    </div>
    <%= f.submit 'Confirmar Adição' %>
  <% end %>
  
<% end %>