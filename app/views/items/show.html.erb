<div class="text-center">
	<h2><%= @item.name %></h2>
	<div>
		<%= link_to('Voltar', items_path) %>
	</div>
	<div class="d-flex flex-column text-center">
		<strong><%= Item.human_attribute_name(:code) %>:</strong> <%= @item.code %>
		<strong><%= Item.human_attribute_name(:description) %>:</strong> <%= @item.description %>
		<strong><%= Item.human_attribute_name(:weight) %>:</strong> <%= @item.weight %> g
		<strong>Dimens√£o:</strong> <%= "#{@item.width} cm x #{@item.height} cm x #{@item.depth} cm" %>
		<strong><%= Item.human_attribute_name(:category) %>:</strong> <%= @item.category %> 
	</div>
	<% if @item.image_url? %>
		<div>
			<%= image_tag(@item.image_url, :alt => "Imagem do item", class: "w-25 rounded border border-dark") %>
		</div>
	<% end %>
</div>