<div class="text-center">
	<h2>Novo Item</h2>

	<% if(@item.errors.any?) %>
		<div class="w-25 mx-auto">
			<p>Verifique os erros abaixo:</p>
			<ul>
				<% @item.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="d-flex justify-content-center">
		<%= form_with(model: @item) do |f| %>
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :description %>
				<%= f.text_area :description, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :weight %>
				<%= f.number_field :weight, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :width %>
				<%= f.number_field :width, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :height %>
				<%= f.number_field :height, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :depth %>
				<%= f.number_field :depth, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :category %>
				<%= f.text_field :category, class: "form-control" %>
			</div>
			<div>
				<%= f.label :image %>
				<%= f.file_field :image, class: "form-control" %>
			</div>
				<%= f.submit 'Enviar', class: "btn btn-primary my-2" %>
		<% end %>
	</div>
</div>